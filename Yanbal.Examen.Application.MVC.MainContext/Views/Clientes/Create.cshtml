@model Yanbal.Examen.Application.MainContext.Dtos.ClienteDto

@{
    ViewData["Title"] = "Crear cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="text-danger">@Html.ValidationMessage("Custom")</div><br />
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Nombres" class="control-label"></label>
                    <input asp-for="Nombres" class="form-control" maxlength="250" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control" maxlength="250" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" maxlength="320" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input type="date" asp-for="FechaNacimiento" class="form-control" max="dateNow" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-12">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" maxlength="800" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6 text-left">
                    <a asp-action="Index">Regresar</a>
                </div>
                <div class="form-group col-sm-6 text-right">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
